<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2B48C"
    tools:context=".AddStudent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="THÔNG TIN SINH VIÊN"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="#D3D3D3"
        android:background="#8B4513"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Họ và tên:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#8A4B3F"
            android:layout_gravity="center_vertical">
        </TextView>


        <EditText
            android:id="@+id/HoVaTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên"
            android:textSize="20sp"
            android:layout_gravity="center_vertical">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="MSSV:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#8A4B3F"
            android:layout_gravity="center_vertical">
        </TextView>


        <EditText
            android:id="@+id/MSSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mã số sinh viên"
            android:textSize="20sp"
            android:layout_gravity="center_vertical">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Lớp:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#8A4B3F"
            android:layout_gravity="center_vertical">
        </TextView>


        <EditText
            android:id="@+id/Lop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập lớp"
            android:textSize="20sp"
            android:layout_gravity="center_vertical">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="SĐT:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#8A4B3F"
            android:layout_gravity="center_vertical">
        </TextView>


        <EditText
            android:id="@+id/SDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số điện thoại"
            android:textSize="20sp"
            android:layout_gravity="center_vertical">
        </EditText>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SINH VIÊN NĂM"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="#D3D3D3"
        android:background="#8B4513"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/checkBoxNam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Năm 1" />

        <CheckBox
            android:id="@+id/checkBoxNam2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Năm 2" />

        <CheckBox
            android:id="@+id/checkBoxNam3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Năm 3" />

        <CheckBox
            android:id="@+id/checkBoxNam4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Năm 4" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CHUYÊN NGÀNH"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="#D3D3D3"
        android:background="#8B4513"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/checkBoxDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điện tử" />


        <CheckBox
            android:id="@+id/checkBoxVT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viễn thông" />

        <CheckBox
            android:id="@+id/checkBoxMT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Máy tính - Hệ thống nhúng" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="KẾ HOẠCH PHÁT TRIỂN BẢN THÂN"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="#D3D3D3"
        android:background="#8B4513"/>

    <EditText
        android:id="@+id/EditTextPTBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:baselineAligned="false">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_background"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/ButtonImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Chụp hình"
                android:textSize="25sp"
                android:background="@android:color/transparent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectangle_background"
            android:gravity="center">

            <Button
                android:id="@+id/ButtonTruyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thêm"
                android:textSize="25sp"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>