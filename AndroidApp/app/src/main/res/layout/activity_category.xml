<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_new"
    tools:context=".CategoryActivity">

    <EditText
        android:id="@+id/txt_c_categoryName"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="32dp"
        android:hint="Enter Category Name"
        android:inputType="textPersonName"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_c_pick_image"
        android:layout_width="121dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/pink"
        android:text="Pick Image"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/btn_c_submit"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_c_preview"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/btn_c_submit"
        android:layout_width="128dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/pink"
        android:text="Submit"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_c_pick_image"
        app:layout_constraintTop_toBottomOf="@id/img_c_preview"
        app:layout_constraintWidth_percent="0.45" />

    <ImageView
        android:id="@+id/img_c_preview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_c_categoryName" />

</androidx.constraintlayout.widget.ConstraintLayout>
