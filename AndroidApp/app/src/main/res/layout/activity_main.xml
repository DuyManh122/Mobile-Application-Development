<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2B48C"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="HỌC SINH LỚP 1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:textColor="#D3D3D3"
        android:background="#8B4513"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HS nhập:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#8A4B3F"
            android:layout_gravity="center_vertical">
        </TextView>


        <EditText
            android:id="@+id/StudentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập văn bản"
            android:textSize="20sp"
            android:layout_gravity="center_vertical">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GV sửa:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#8A4B3F"
            android:layout_gravity="center_vertical">
        </TextView>


        <TextView
            android:id="@+id/TeacherText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_vertical">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_button"
        android:layout_gravity="center">
        <Button
            android:id="@+id/StudentSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:text="Nộp Bài"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_button"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/StudentClearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textSize="25sp"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>